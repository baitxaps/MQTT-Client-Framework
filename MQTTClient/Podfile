	platform :tvos, '9.0'
	pod 'CocoaLumberjack'
	pod 'MQTTClient/MinL', :path => '..'
	pod 'MQTTClient/ManagerL', :path => '..'
	pod 'MQTTClient/WebsocketL', :path => '..'
end

target 'MQTTClientmacOSTests' do
	platform :osx, '10.10'
	pod 'CocoaLumberjack'
	pod 'MQTTClient/MinL', :path => '..'
	pod 'MQTTClient/ManagerL', :path => '..'
	pod 'MQTTClient/WebsocketL', :path => '..'
