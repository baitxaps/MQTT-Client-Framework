source 'https://github.com/CocoaPods/Specs.git'
use_frameworks!

target 'MQTTClientiOSTests' do
	platform :ios, '6.1'
	pod 'CocoaLumberjack'
	pod 'MQTTClient/MinL', :path => '..'
	pod 'MQTTClient/ManagerL', :path => '..'
	pod 'MQTTClient/WebsocketL', :path => '..'
end

